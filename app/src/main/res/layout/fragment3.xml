<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment3">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:id="@+id/unitConverter"
        app:strokeWidth="2dp"
        app:strokeColor="@color/textColor"
        app:cardBackgroundColor="@color/backgroundColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unit Converter"
                android:padding="5dp"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Easy Unit Converter to convert measurement units like length, weight, height etc"
                android:textColor="@color/textColor"
                android:padding="5dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textSize="15sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:id="@+id/notes"
        app:strokeWidth="2dp"
        app:strokeColor="@color/textColor"
        app:cardBackgroundColor="@color/backgroundColor"
        app:layout_constraintTop_toBottomOf="@id/unitConverter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note Pad"
                android:padding="5dp"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notepad is a small and fast app to create and edit text notes."
                android:textColor="@color/textColor"
                android:padding="5dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textSize="15sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>